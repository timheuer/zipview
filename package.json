{
  "name": "vscode-zip-viewer",
  "displayName": "Zip Viewer",
  "description": "A browser and viewer for zip files in the workspace",
  "version": "0.0.0-placeholder",
  "author": {
    "name": "Tim Heuer",
    "url": "https://timheuer.com"
  },
  "publisher": "timheuer",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/timheuer/zipview"
  },
  "bugs": {
    "url": "https://github.com/timheuer/zipview/issues"
  },
  "qna": "https://github.com/timheuer/zipview/issues",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Zip Viewer",
      "properties": {
        "zipView.maxFileSize": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum file size (in MB) that can be previewed from zip archives. ⚠️ Warning: Setting this above the default (10MB) may cause high memory usage or crashes when opening large files."
        },
        "zipView.maxCompressionRatio": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 10000,
          "description": "Maximum allowed compression ratio (uncompressed/compressed size) for zip entries. Files exceeding this ratio are blocked as potential zip bombs. ⚠️ Warning: Setting this above the default (100) increases vulnerability to zip bomb attacks which can cause memory exhaustion and crashes."
        },
        "zipView.maxCacheSize": {
          "type": "number",
          "default": 50,
          "minimum": 1,
          "maximum": 500,
          "description": "Maximum number of file contents to cache in memory for faster access. ⚠️ Warning: Setting this above the default (50) increases memory usage, especially when viewing large files."
        },
        "zipView.logLevel": {
          "type": "string",
          "default": "info",
          "enum": ["off", "error", "warn", "info", "debug", "trace"],
          "enumDescriptions": [
            "No logging",
            "Only errors",
            "Errors and warnings",
            "Errors, warnings, and info (default)",
            "All except trace",
            "All log levels"
          ],
          "description": "Controls the verbosity of extension logging in the Output panel."
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "zipExplorer",
          "name": "Zip Files",
          "icon": "$(file-zip)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "zipExplorer",
        "contents": "No zip files found in the workspace."
      }
    ],
    "commands": [
      {
        "command": "zipExplorer.showInWorkspace",
        "title": "Show in Workspace",
        "icon": "$(arrow-small-right)"
      },
      {
        "command": "zipExplorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "zipExplorer.refresh",
          "when": "view == zipExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "zipExplorer.showInWorkspace",
          "when": "view == zipExplorer && viewItem == zipFile",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@timheuer/vscode-ext-logger": "^0.1.35",
    "jszip": "^3.10.1"
  }
}
